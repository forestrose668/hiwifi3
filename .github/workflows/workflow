jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      # 其他步骤...

      - name: Create a GitHub release
        id: create_release
        uses: actions/create-release@v1
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        with:
          tag_name: ${{ github.ref }}
          release_name: Release ${{ github.ref }}
          draft: false
          prerelease: false

      # 其他步骤...
# 在 workflow 文件中确认权限配置
permissions:
  contents: write  # 最低所需权限
  # 或直接赋予全部权限（测试时可临时使用）
  # issues: write
  # pull-requests: write
  # statuses: write
  # deployments: write
